<div class="container-image"
style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://images.unsplash.com/photo-1580153111806-5007b971dfe7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2467&q=80);">

  <div class="row no-gutters">
    <div class="col-xs-12 col-sm-6 offset-sm-3">
      <div class="form-post">
        <h1>Add a fixed earning</h1>
        <%= simple_form_for(@earning) do |f| %>

        <div class="row">
          <div class="col-sm-12">
            <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker", value: Date.today} %>
            <%= f.input :category, label: "Nature of your earning", collection: Earning::CATEGORY, input_html: { class: "select2" } %>
            <%= f.input :forecast_amount, as: :hidden, input_html: { value: 0 } %>
            <%= f.input :real_amount, label: "What was the amount of your earning?", placeholder: "Enter amount", input_html: { value: "" } %>
            <%= f.input :title, label: "Description", placeholder: "Please briefly describe your earning" %>
          </div>

        </div>
          <%= f.submit "Add earning", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
