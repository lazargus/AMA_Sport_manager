<div class="container-image">
<div class="row no-gutters">
  <div class="col-xs-12 col-sm-6 offset-sm-3">
    <div class="form-post">
      <h1>My profile</h1>
      <div class="row">
        <div class="col-sm-12">
          <%= simple_form_for(@user) do |f| %>
            <%= f.input :first_name,
                        disabled: true%>
            <%= f.input :last_name,
                        disabled: true%>
            <%= f.input :age,
                        disabled: true%>
            <%= f.input :nationality,
                        disabled: true%>
            <%= f.input :ranking,
                        disabled: true%>
            <%= link_to "Edit profile", edit_user_path(current_user), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
